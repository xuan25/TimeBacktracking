<Window x:Class="TimeBacktracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeBacktracking"
        mc:Ignorable="d"
        Title="Time Backtracking" Height="100" Width="190" WindowStyle="ToolWindow" Closing="Window_Closing">
    <Grid>
        <Button x:Name="startBtn" Content="Backtrack" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="startBtn_Click" Margin="10,10,0,0"/>
        <Button x:Name="stopBtn" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="stopBtn_Click" Margin="10,34,0,0"/>
        <Button x:Name="syncBtn" Content="Sync" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="syncBtn_Click"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,38,15,0" TextWrapping="Wrap" Text="by xuan" VerticalAlignment="Top"/>

    </Grid>
</Window>
